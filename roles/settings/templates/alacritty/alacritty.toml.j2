# {{ ansible_managed }}
[window]
opacity = 1

[window.class]
general = "Alacritty"
instance = "Alacritty"

[window.dimensions]
columns = 150
lines = 50

[env]
TERM = "xterm-256color"

[colors.bright]
black = "#6e6a86"
blue = "#5079d2"
cyan = "#ebbcba"
green = "#d19cca"
magenta = "#c4a7e7"
red = "#eb6f92"
white = "#e0def4"
yellow = "#f6c177"

[colors.cursor]
cursor = "#524f67"
text = "#e0def4"

[colors.hints.end]
background = "#1f1d2e"
foreground = "#6e6a86"

[colors.hints.start]
background = "#1f1d2e"
foreground = "#908caa"

[colors.line_indicator]
background = "None"
foreground = "None"

[colors.normal]
black = "#26233a"
blue = "#5079d2"
cyan = "#ebbcba"
green = "#d19cca"
magenta = "#c4a7e7"
red = "#eb6f92"
white = "#e0def4"
yellow = "#f6c177"

[colors.primary]
background = "#191724"
foreground = "#e0def4"

[colors.selection]
background = "#403d52"
text = "#e0def4"

[colors.vi_mode_cursor]
cursor = "#524f67"
text = "#e0def4"

[font]
size = 13.0

[font.bold]
family = "JetBrains Mono"
style = "Bold"

[font.italic]
family = "JetBrains Mono"
style = "Italic"

[font.normal]
family = "JetBrains Mono"
style = "Light"

[font.offset]
x = 0
y = 0

[scrolling]
history = 10000
multiplier = 3

[selection]
save_to_clipboard = true
